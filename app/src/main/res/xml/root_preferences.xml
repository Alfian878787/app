<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/battery_and_data">

        <SwitchPreferenceCompat
            app:key="preserve_battery"
            app:title="@string/preserve_battery"
            app:defaultValue="true"
            app:summary="@string/preserve_battery_summary"
            />

        <SwitchPreferenceCompat
            app:key="preserve_data"
            app:title="@string/preserve_data"
            app:defaultValue="true"
            app:summary="@string/preserve_data_summary"
            />

    </PreferenceCategory>

</PreferenceScreen>